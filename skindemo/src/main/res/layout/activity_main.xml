<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.skin.MainActivity">

    <TextView
        android:id="@+id/tv_change_skin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:textColor="#abc123"
        android:text="换肤" />

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image_src" />

    <TextView
        android:id="@+id/tv_change_default"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:textColor="@color/test_change_color"
        android:text="恢复默认" />

    <TextView
        android:id="@+id/tv_new_activity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="跳转" />
</LinearLayout>
